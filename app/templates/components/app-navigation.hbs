      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    {{/navbar.toggle}}
    {{#link-to "app.dashboard" class="navbar-brand"}}Ember Client{{/link-to}}
  </div>
